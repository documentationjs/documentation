{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "no-var": 2,
    "prefer-const": 2,
    "no-use-before-define": [2, "nofunc"],
    "camelcase": 2,
    "no-lonely-if": 2,
    "no-else-return": 2,
    "new-cap": 2,
    "no-empty": 2,
    "consistent-return": 0,
    "no-new": 2,
    "object-shorthand": ["error", "always", { "avoidQuotes": true }],
    "no-throw-literal": 2,
    "no-self-compare": 2,
    "no-void": 2,
    "no-unused-vars": 2,
    "wrap-iife": 2,
    "no-eq-null": 2,
    "strict": [2, "global"],
    "no-shadow": 0,
    "no-undef": 2,
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1
  },
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended",
    "prettier"
  ],
  "env": {
    "node": true,
    "es6": true
  }
}
